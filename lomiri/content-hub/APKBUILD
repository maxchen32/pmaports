# Maintainer: Luca Weiss <luca@z3ntu.xyz>
# Contributor: Antoni Aloy <aaloytorrens@gmail.com>
pkgname=content-hub
pkgver=1.0.0_git20220503
pkgrel=0
_commit="3f6cfa4a2043889a54d66ffd9ec4b7668a4a3dec"
pkgdesc="Content sharing/picking infrastructure and service, designed to allow apps to securely and efficiently exchange content"
url="https://gitlab.com/ubports/development/core/content-hub"
arch="all"
license="GPL-3.0 LGPL-3.0"
depends_dev="qt5-qtdeclarative-dev lomiri-app-launch-dev gsettings-qt-dev libnih-dev lomiri-download-manager-dev libnotify-dev libapparmor-dev lomiri-ui-toolkit-dev"
makedepends="$depends_dev cmake cmake-extras libapparmor gtest-dev qtchooser qt5-qttools-dev doxygen graphviz"
checkdepends="gmock dbus-test-runner xvfb-run"
options="!check" # 92% tests passed, 1 tests failed out of 12
source="https://gitlab.com/ubports/development/core/content-hub/-/archive/$_commit/content-hub-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-lang $pkgname-doc"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DWerror=OFF
	cmake --build build
}

check() {
	cd build/tests
	xvfb-run env CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# Remove files for testing only
	# https://gitlab.com/ubports/development/core/content-hub/-/blob/main/debian/content-hub-testability.install
	rm "$pkgdir"/usr/bin/content-hub-test*
	rm "$pkgdir"/usr/share/content-hub/peers/content-hub-test*
	rm "$pkgdir"/usr/share/applications/content-hub-test*
	rm -r "$pkgdir"/usr/share/content-hub/testability/data
	rm "$pkgdir"/usr/share/icons/hicolor/512x512/apps/content-hub-test*
}

sha512sums="
8092a288cd132e4520578d26664817c8b2440c6fbd31a40001fb9f528a8617ceca94106fd447f594b8e0c951272b22962506bd6a2855d2d6d8db44e258f24641  content-hub-3f6cfa4a2043889a54d66ffd9ec4b7668a4a3dec.tar.gz
"
